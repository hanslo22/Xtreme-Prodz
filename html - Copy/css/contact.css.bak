@import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');
@import url('https://fontawesome.com/icons/');
body{
  margin:0px;
  padding: 0px;
  font-family: 'Bodoni', sans-serif;
  background-color:#5D9DDE;
}
/* Barre de navigation */
nav{
  display:flex;
  flex-wrap:wrap;
  justify-content: space-between;
  padding: 20px;
  background-color: #fff;
  position: sticky;
  top: 0;
}
nav h1{
	font-family:'Bodoni MT'
  font-size: 20px;
}
nav .onglets{
  display: flex;
  flex-wrap:wrap;
}
nav .onglets p>a{
	color:#fff;
	text-decoration:none;
font-family:'Verdana', Bold;
}
nav .onglets p{
  font-size: 15px;
  margin-right: 10px;
  cursor:pointer;
  display:inline-block; 
  border-radius:3px;
  
  width:100px;
	 margin:2px;
	 text-decoration:none;
	 padding:5px ;
	 border-bottom:solid 10px#12086B;
	 background-color:#12086B;
	 color:ffff;
	 transition:all 0.5s ease;
  
}
nav .onglets p:hover{
		 padding:10px;
	 border-bottom:solid 15px #AAA;
	 background-color:#12086B;
	 color:#FFF;
	 transition:0.5s ease;
}
nav .onglets input{
  margin: 8px 20px;
  padding: 15px;
  border-radius: 30px;
  border:none;
  background-color: #f2f2f2;
  outline:none;
}
/* Header */
header{
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items:center;
  
}
header h1{
  font-size: 30px;
  max-width: 750px;
  text-align:justify;
}
div.contact button{
	display:vertical-align;
  padding: 15px 20px;
  font-size: 20px;
  border:none;
  border-radius: 5px;
  outline:none;
  cursor:pointer;
  margin:10 px;
  margin-top:15px;
}
header button.mail{
	display:vertical-align;
  padding: 15px 20px;
  font-size: 20px;
  border:none;
  border-radius: 5px;
  outline:none;
  cursor:pointer;
  margin:10 px;
}
/* Fin du header */

/* Pied de page */
footer {
  margin-top: 100px;
  background-color: #000;
  padding: 30px;
  color: #fff;
  display: flex;
  flex-wrap:wrap;
  justify-content: space-between;
}
footer .social-media{
  display: flex;
}
footer .social-media p{
  margin-right: 15px;
  border: 1px solid #fff;
  border-radius: 100%;
  padding: 5px;
  text-align:center;
  width: 20px;
  cursor:pointer;
}
/* Fin du pied de page */
@media screen and (max-width: 640px){
  nav .onglets .link, nav h1{
    display:none;
  }